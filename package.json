{
	"name": "xlog-watcher",
	"displayName": "xlog watcher",
	"description": "check check!",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.helloWorld",
		"onCommand:extension.showText",
		"onCommand:extension.showTextSelection"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.helloWorld",
				"title": "Hello World"
			},
			{
				"command": "extension.showText",
				"title": "%extension.showText.title%"
			},
			{
				"command": "extension.showTextSelection",
				"title": "%extension.showTextSelection.title%"
			}
		],
		"keybindings": [
			{
				"command": "extension.showTextSelection",
				"key": "cmd+Alt+p"
			}
		],
		"menus": {
			"editor/context": [
				{
					"when": "editorFocus",
					"command": "extension.showText",
					"group": "6_px"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"test": "node ./out/test/runTest.js",
		"cargo_win": "cd src/awwleegay && rustup run stable-x86_64-pc-windows-msvc cargo build",
		"cargo_build": "cd src/awwleegay && cargo build",
		"gyp_build": "HOME=~/.electron-gyp node-gyp rebuild --target=6.0.0 --arch=x64 --dist-url=https://electronjs.org/headers",
		"build": "npm run cargo_build && npm run gyp_build"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.1",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"eslint": "^6.8.0",
		"@typescript-eslint/parser": "^2.18.0",
		"@typescript-eslint/eslint-plugin": "^2.18.0",
		"glob": "^7.1.6",
		"mocha": "^7.0.1",
		"typescript": "^3.7.5",
		"vscode-test": "^1.3.0"
	},
	"dependencies": {
		"bindings": "^1.5.0",
		"nan": "^2.14.0",
		"node-gyp": "^6.1.0"
	}
}
